<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reader_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.viewpager.widget.DirectionalViewPager
        android:id="@+id/reader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </androidx.viewpager.widget.DirectionalViewPager>

    <LinearLayout
        android:id="@+id/menu_up"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="top"
        android:background="#FF3D3D3D"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="6dp"
        android:paddingRight="18dp"
        android:paddingBottom="6dp">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_arrow_back_ios_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manga_name"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Shimeji Simulation"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chapter 1"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/more_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/baseline_more_vert_24"
            android:layoutDirection="rtl" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FF3D3D3D"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <Button
            android:id="@+id/direct_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/baseline_phonelink_setup_24" />

        <Button
            android:id="@+id/prev_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_prev" />

        <TextView
            android:id="@+id/text_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="01/12"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_next" />

        <Button
            android:id="@+id/rotate_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/baseline_screen_rotation_24" />
    </LinearLayout>


</FrameLayout>